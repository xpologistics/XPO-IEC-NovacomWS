<?xml version="1.0" encoding="UTF-8"?>
<hazelcast
		xsi:schemaLocation="http://www.hazelcast.com/schema/config http://www.hazelcast.com/schema/config/hazelcast-config.xsd"
		xmlns="http://www.hazelcast.com/schema/config"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
         

	
	<map name="novacom-vehicule">
		<time-to-live-seconds>86400</time-to-live-seconds>
		<max-idle-seconds>0</max-idle-seconds>
		<eviction-policy>LRU</eviction-policy>
		<max-size policy="USED_HEAP_PERCENTAGE">40</max-size>
		<eviction-percentage>15</eviction-percentage>
		<near-cache>
		</near-cache>
	</map>

	
	<properties>
		<property name="hazelcast.jmx">true</property>
		<property name="hazelcast.jmx.detailed">true</property>
	</properties>
    
</hazelcast>